{
    "name": "sdl3",
    "modules": [
        {
            "name": "SDL3",
            "builddir": true,
            "buildsystem": "cmake-ninja",
            "cleanup": [
                "/include",
                "/lib/*.la",
                "/lib/*.a",
                "/lib/cmake",
                "/share/aclocal",
                "/lib/pkgconfig"
            ],
            "config-opts": [
                "-DCMAKE_VERBOSE_MAKEFILE=ON",
                "-DCMAKE_BUILD_TYPE:STRING=Release",
                "-DCMAKE_INSTALL_LIBDIR:PATH=lib"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libsdl-org/SDL/releases/download/release-3.2.24/SDL3-3.2.24.tar.gz",
                    "sha256": "81cc0fc17e5bf2c1754eeca9af9c47a76789ac5efdd165b3b91cbbe4b90bfb76"
                }
            ]
        },
        {
            "name": "sdl3_image",
            "builddir": true,
            "buildsystem": "cmake-ninja",
            "cleanup": [
                "/include",
                "/lib/*.la",
                "/lib/*.a",
                "/lib/cmake",
                "/share/aclocal",
                "/lib/pkgconfig"
            ],
            "config-opts": [
                "-DCMAKE_VERBOSE_MAKEFILE=ON",
                "-DCMAKE_BUILD_TYPE:STRING=Release",
                "-DCMAKE_INSTALL_LIBDIR:PATH=lib"
            ],
            "sources":[
                {
                    "type": "archive",
                    "url": "https://github.com/libsdl-org/SDL_image/releases/download/release-3.2.4/SDL3_image-3.2.4.tar.gz",
                    "sha256": "a725bd6d04261fdda0dd8d950659e1dc15a8065d025275ef460d32ae7dcfc182"
                }
            ]
        }
    ]
}
